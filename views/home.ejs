<%- include('partials/header'); -%>

<div class="container">
  <% posts.forEach(function(post) { %>
    <div class="post">
      <h2><%= post.postTitle %></h2>
      <p id="postAuthor">来自「<strong><%= post.nickname %></strong>」的留言
      <br><%= new Date(post.timestamp).toLocaleString('en-US', { timeZone: 'Asia/Shanghai' }) %></p>

      <p>
        <%= post.postContent.length > 100 ? post.postContent.substring(0, 100) + "..." : post.postContent %>
        <% if (post.postContent.length > 100) { %>
          <a href="/posts/<%= post.postTitle %>" class="expand-link">展开</a>
        <% } %>
      </p>

    </div>
    <hr>
  <% }); %>

  
<!-- 写文章按钮 -->
<div class="d-flex justify-content-center" style="padding-top: 20px;">
    <form action="/compose" method="get" class="d-flex align-items-center">
      <button type="submit" class="btn btn-outline-success large-button">写点什么吧。🥰</button>
      <img src="/images/lablogo.png" class="button-icon">
    </form>
  </div>
</div>

<%- include('partials/footer'); -%>